<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#fff"
    tools:context="com.logarithm.airticket.flightticketbook.ConfirmTicketActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical">
    <customfonts.MyTextView_Roboto_Bold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:text="Screenshot this for futher reference"/>

    <customfonts.MyTextView_Roboto_Bold
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:text="AIRFRANCE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <customfonts.MyTextView_Roboto_Medium

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCountry"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Paris"/>
            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/txtStationArrived"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="CDG"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/ic_blackplane"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">


            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/txtCountryDestination"
                android:text="Paris"/>
            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStationDestination"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="CDG"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#edecf2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Passengers"/>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:id="@+id/passengerName"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="19dp"
                android:text="Keyur Modi"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">


            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Seat"/>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="19dp"
                android:text="14 A"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Flight"/>
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Date"/>
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Depart"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/flightnumber"
                android:textSize="16dp"
                android:textColor="@color/textcolor"
                android:layout_height="wrap_content"
                android:text="834"/>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/textcolor"
                android:id="@+id/date"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="3/24/2017"/>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="0dp"
                android:id="@+id/txtTimeArrived"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="16dp"
                android:textColor="@color/textcolor"
                android:layout_height="wrap_content"
                android:text="9:10 AM"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#edecf2"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Terminal"/>
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Gate"/>
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Boarding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="16dp"
                android:textColor="@color/textcolor"
                android:layout_height="wrap_content"
                android:text="D4"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/textcolor"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="A2"/>


            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="16dp"

                android:textColor="#1be68d"
                android:layout_height="wrap_content"
                android:text="1 Hour before above time"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="100dp"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="end"
                    android:paddingBottom="10dp"
                    android:src="@drawable/qrcode"/>
            </LinearLayout>

    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="left"
        android:text="A2"
        android:textColor="@color/textcolor"
        android:textSize="18dp" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
