<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="100dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dubai" />


                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Bold
                            android:id="@+id/txtFlightName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="AIRFRANCE"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Paris"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                                <customfonts.MyTextView_Roboto_Bold
                                    android:id="@+id/txtStationArrived"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:text="CDG"
                                    android:textColor="#000"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtTimeArrived"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9:10 AM"
                                    android:textColor="@color/textcolor"
                                    android:textSize="12dp" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtDateArrived"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mar 24, 2017"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgPlane"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_blackplane" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtTravelTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6.5dp"
                                    android:text="08h50"
                                    android:textSize="12dp"
                                    android:textAlignment="center"
                                    android:textColor="#000" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">


                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtCountryDestination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New York"
                                    android:textColor="@color/textcolor"
                                    android:textSize="15dp" />

                                <customfonts.MyTextView_Roboto_Bold
                                    android:id="@+id/txtStationDestination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:text="CDG"
                                    android:textColor="#000"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtTimeDestination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9:10 AM"
                                    android:textColor="@color/textcolor"
                                    android:textSize="12dp" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txtDateDestination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mar 24. 2017"
                                    android:textSize="12dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="24dp"
                            android:background="#ededed" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Passengers"
                                    android:textSize="12dp" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"

                                    android:layout_marginTop="2dp"
                                    android:text="Lucy Parson"
                                    android:textColor="#000"
                                    android:textSize="19dp" />


                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"

                                    android:layout_marginTop="2dp"
                                    android:text="Lucy Parson"
                                    android:textColor="#000"
                                    android:textSize="19dp" />


                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"

                                    android:layout_marginTop="2dp"
                                    android:text="Lucy Parson"
                                    android:textColor="#000"
                                    android:textSize="19dp" />


                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"

                                    android:layout_marginTop="2dp"
                                    android:text="Lucy Parson"
                                    android:textColor="#000"
                                    android:textSize="19dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">


                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Economy Class"
                                    android:textSize="12dp" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:text="14 A"
                                    android:textColor="#000"
                                    android:textSize="19dp" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:text="14 B"
                                    android:textColor="#000"
                                    android:textSize="19dp" />


                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="24dp"
                            android:background="#ededed" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Baggages"
                                    android:textSize="12dp" />

                                <customfonts.MyTextView_Roboto_Bold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="4dp"
                                    android:text="2 * 23 Kg"
                                    android:textColor="#000"
                                    android:textSize="19dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:gravity="bottom"
                                    android:text="Priority Bording"
                                    android:textColor="#000"
                                    android:textSize="17dp" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:elevation="3dp"
                android:orientation="horizontal">


            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bookNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="$ 2.231"
                android:textColor="#000"
                android:textSize="22dp"
                android:textStyle="bold" />

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text=" / Person"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <customfonts.Button_Roboto_Bold
                android:id="@+id/btnBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1be68d"
                android:paddingBottom="18dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="18dp"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/toolbar_ticket" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="62.5dp"
        android:background="@drawable/shadow" />


</FrameLayout>