<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.logarithm.airticket.flightticketbook.FlightListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingBottom="18dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">


        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/txtFlightName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="AIRFRANCE"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paris"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <customfonts.MyTextView_Roboto_Bold
                    android:id="@+id/txtStationArrived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="CDG"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtTimeArrived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="13dp"
                    android:text="9:10 AM" />

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtDateArrived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Mar 24, 2017" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPlane"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_blackplane" />

                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txtTravelTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:text="08h50"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">


                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtCountryDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paris"
                    android:textColor="@color/textcolor"
                    android:textSize="15dp" />

                <customfonts.MyTextView_Roboto_Bold
                    android:id="@+id/txtStationDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="CDG"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTimeDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="13dp"
                    android:text="9:10 AM" />

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/txtDateDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Mar 24. 2017" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="13dp"
            android:gravity="center">

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:text="@string/buy"
            android:textSize="20dp" />

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textcolor"
                android:textSize="20dp"
                android:text="  $ 2.231" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
